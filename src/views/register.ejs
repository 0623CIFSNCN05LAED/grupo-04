    <main>

        <div class="formulario">

            <h1>Registro de usuario nuevo</h1>

            <form action="/registro" method="post" class="flex flex-wrap w-100 flex-dir-col h-a">

                <p class="flex  flex-wrap w-50 jcl h-a">
                    <label for="nombre_usuario" class="fs-16"> Nombre de usuario</label>
                </p>
                <p class="flex f-direction-col flex-wrap w-80 mg-x-auto h-a">
                    <input type="text" name="nombre_usuario" id="nombre_usuario" class="w-100 fs-16 fc-darkgrey h-a"
                        placeholder="Ingrese nombre de usuario">
                </p>

                <p class="flex  flex-wrap w-50 jcl">
                    <label for="email" class="fs-16"> e-mail</label>
                </p>
                <p class="flex f-direction-col flex-wrap w-80 mg-x-auto">
                    <input type="text" name="nombre_usuario" id="nombre_usuario" class="w-100 fs-16 fc-darkgrey"
                        placeholder="Ingrese nombre de usuario">
                </p>

                <p class="flex  flex-wrap w-50 jcl">
                    <label for="password" class="fs-16"> Contraseña</label>
                </p>
                <p class="flex f-direction-col flex-wrap w-80 mg-x-auto">
                    <input type="password" name="password" id="password" class="w-100 fs-16 fc-grey"
                        placeholder="Ingrese contraseña">
                </p>

                <p class="flex  flex-wrap w-50 jcl">
                    <label for="nombre_apellido" class="fs-16"> Nombre y apellido</label>
                </p>
                <p class="flex f-direction-col flex-wrap w-80 mg-x-auto">
                    <input type="text" name="nombre_apellido" id="nombre_apellido" class="w-100 fs-1 fc-darkgrey"
                        placeholder="Ingrese nombre y apellido">
                </p>

                <p class="flex  flex-wrap w-50 jcl">
                    <label for="dni" class="fs-16"> DNI</label>
                </p>
                <p class="flex f-direction-col flex-wrap w-80 mg-x-auto">
                    <input type="number" name="dni" id="dni" class="w-100 fs-1 fc-darkgrey" placeholder="Ingrese DNI">
                </p>

                <p class="flex  flex-wrap w-50 jcl">
                    <label for="domicilio" class="fs-16"> Domicilio</label>
                </p>
                <p class="flex f-direction-col flex-wrap w-80 mg-x-auto">
                    <input type="text" name="domicilio" id="dni" class="w-100 fs-1 fc-darkgrey"
                        placeholder="Ingrese domicilio">
                </p>

                <p class="flex  flex-wrap w-50 jcl">
                    <label for="telefono" class="fs-16"> Telefono</label>
                </p>
                <p class="flex f-direction-col flex-wrap w-80 mg-x-auto">
                    <input type="tel" name="telefono" id="telefono" class="w-100 fs-1 fc-darkgrey"
                        placeholder="Ingrese numero telefonico">
                </p>


                <div class="flex f-ss fw-400">
                    <button type="submit" class="fw-400 p-1 fs-16 bcg-darkgrey mr-1 border-radius w-50 ml-1"><span
                            class="fw-400 f-ss p-1">Ingresar</span></button>

                    <input type="checkbox" name="recuerdame" id="recuerdame"> <span
                        class="fw-400 f-ss fs-12 p-1 justify-center my-auto">
                        Recuerdame</span>
                </div>
                <a href="#">Olvidaste tu contraseña</a>



        </div>

