      <form method="post" class="form-products" action="/productos" enctype="multipart/form-data">

        <!-- Nombre del producto -->
        <div class="name of product">
            <label for="name">Nombre del Producto:</label>
            <input type="text" id="name" name="name" value="<%= locals.old? old.name : null %>">
            <% if (locals.errors && errors.name) { %>
              <%= errors.name.msg %>
          <% } %>
            <span class="errorMessage" id="nameError"></span>
        </div>

        <!-- Sabor -->
        <div class="taste of product">
          <label for="taste">Sabor:</label>
          <input type="text" id="taste" name="taste" value="<%= locals.old? old.taste : null %>">
          <% if (locals.errors && errors.taste) { %>
            <%= errors.taste.msg %>
        <% } %>
          <span class="errorMsg" id="tasteError"></span>
        </div>

        <!-- Peso -->
        <div class="weigth">
            <label for="weight">Peso:</label>
            <input type="text" id="weight" name="weight" value="<%= locals.old? old.weight : null %>"> 
            <% if (locals.errors && errors.weight) { %>
              <%= errors.weight.msg %>
          <% } %>
            <span class="errorMsg" id="weightError"></span>
        </div>

        <!-- Categoría -->
        <div class="category">
            <label for="category">Categoría:</label>
            <input type="text" id="category" name="category" value="<%= locals.old? old.category : null %>">
            <% if (locals.errors && errors.category) { %>
              <%= errors.category.msg %>
          <% } %>
          <span class="errorMsg" id="categoryError"></span>
        </div>

        <!-- Imagen -->
        <div class="image">
            <label for="image">Imagen:</label>
            <input type="file" id="image" name="image" value="<%= locals.old? old.image : null %>">
            <span class="errorMsg" id="imageError"></span>
        </div>

        <!-- Descripción -->
        <div class="description">
          <label for="description">Descripción:</label>
          <textarea id="description" name="description" rows="4" value="<%= locals.old? old.description : null %>"></textarea>
          <% if (locals.errors && errors.category) { %>
            <%= errors.category.msg %>
        <% } %>
          <span class="errorMsg" id="descriptionError"></span>
        </div>

        <!-- Edad -->
        <div class="age">
          <label for="age">Destinado para (Adulto, Gatito, etc):</label>
          <input type="text" id="age" name="age" value="<%= locals.old? old.age : null %>">
          <% if (locals.errors && errors.age) { %>
            <%= errors.age.msg %>
        <% } %>
          <span class="errorMsg" id="ageError"></span>
        </div>

        <!-- Precio -->
        <div class="price">
            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" step="0.01" value="<%= locals.old? old.price : null %>">
            <% if (locals.errors && errors.price) { %>
              <%= errors.price.msg %>
          <% } %>
            <span class="errorMsg" id="priceError"></span>
        </div>

        <!-- Botón de envío -->
        <div class="save">
            <button type="submit">Guardar Producto</button> 
        </div>

